{
  "extends": "next/core-web-vitals",
  "rules": {
    "no-unused-vars": "warn",
    "react/no-unescaped-entities": "off",
    "@next/next/no-sync-scripts": "off",
    "react-hooks/exhaustive-deps": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "alias": {
        "map": [
          ["@", "./src"]
        ],
        "extensions": [".ts", ".tsx", ".js", ".jsx", ".json"]
      }
    }
  }
} 